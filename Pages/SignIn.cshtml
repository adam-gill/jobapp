@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="text-center mb-4">
    <h1>@ViewData["Title"]</h1>
</div>


<div class="signin_cont">
    <form action="**" method="post">
        <div class="text_boxes">
            <div class="text_box">
                <label class="label" for="username">Username:</label>
                <input class="input_box" type="text" id="username" name="username" required><br>
            </div>

            <div class="text_box">
                <label class="label" for="password">Password:</label>
                <input class="input_box" type="password" id="password" name="password" required><br>
            </div>

            <button class="signin_btn" type="submit">Sign In</button>

            
        </div>
        <p class="alternate">Don't have an account? <a class="link ptr">Sign up</a> instead.</p>
    </form>
</div>
